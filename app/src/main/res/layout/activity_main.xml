<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewHourlyWage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hourly Wage Rate:"
            android:textSize="18sp"
            android:layout_marginBottom="0dp"/>

        <EditText
            android:id="@+id/editTextHourlyWage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter hourly wage rate"
            android:inputType="numberDecimal"
            android:layout_below="@id/textViewHourlyWage"/>

        <TextView
            android:id="@+id/textViewRegularHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hours Worked Per Week:"
            android:textSize="18sp"
            android:layout_below="@id/editTextHourlyWage"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/editTextRegularHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter hours worked per week"
            android:inputType="numberDecimal"
            android:layout_below="@id/textViewRegularHours"/>

        <Button
            android:id="@+id/buttonCalculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate"
            android:layout_below="@id/editTextRegularHours"
            android:layout_marginTop="24dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result:"
            android:textSize="18sp"
            android:layout_below="@id/buttonCalculate"
            android:layout_marginTop="24dp"
            android:visibility="gone"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/textViewWeeklyWage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weekly Wage: ₱0.00"
            android:textSize="18sp"
            android:layout_below="@id/buttonCalculate"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/textViewMonthlyWage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly Wage: ₱0.00"
            android:textSize="18sp"
            android:layout_below="@id/textViewWeeklyWage"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/textViewYearlyWage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yearly Wage: ₱0.00"
            android:textSize="18sp"
            android:layout_below="@id/textViewMonthlyWage"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>